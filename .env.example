# Local dev with Docker Compose: use host.docker.internal so the container can reach your host
# MAIN_APP_URL=http://host.docker.internal:8000
# Local dev without Docker: localhost works fine
MAIN_APP_URL=http://localhost:8000
CONNECTOR_PUBLIC_URL=http://localhost:8001
CONNECTOR_API_KEY=change_me
OAUTH_CLIENT_ID=meo-gpt
OAUTH_CLIENT_SECRET=change_me
JWT_SECRET=change_me_32_chars_minimum
